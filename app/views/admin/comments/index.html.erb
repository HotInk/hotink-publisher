<h1>Listing Comments</h1>

<%= button_link_to 'Clear all flags', clear_all_flags_account_comments_path(@account), :confirm => "Are you sure?" %>

<table style="clear: both;">
  <tr>
  </tr>

<% for comment in @comments %>
<tr>
<td><%= comment.name %></td>
<td><%= comment.created_at %></td>
<td><%= comment.email %></td>
<td><%= h comment.body %></td>	
<td><%= comment.flags %></td>	
<td><%= comment.enabled %></td>	
<td><%= link_to "Flag", flag_account_comment_path(@account, comment) %></td>
<td>
	<% if comment.enabled? %>
		<%= link_to "Disable", disable_account_comment_path(@account, comment) %>
	<% else %>
		<%= link_to "Enable", enable_account_comment_path(@account, comment) %>
	<% end %>
</tr>
<% end %>

</table>

<%= will_paginate @comments %>