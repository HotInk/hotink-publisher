<div id="design_index">
	<h1>Site Designs</h1>	
	<%= button_link_to 'New design', new_account_design_path(@account), :class => "pill-l" %><%= button_link_to_remote 'Import design', :url => new_account_design_import_path(@account), :method => :get, :html => { :class => "large pill-r" } %>

	<div class="design_list">
		<h2>All designs</h2>
		<ul>
		<% @designs.each do |design| %>
		  <li id="design_<%= design.id %>" class="design">
		    <h2><%= link_to h(design.name), [@account, design] %></h2>
		    <p class="options"><%= link_to 'Edit', edit_account_design_path(@account, design) %> | <%= link_to 'x', [@account, design], :confirm => 'Are you sure?', :style=>'color:red;', :method => :delete %></p>
			<%= markdown design.description %>
		  </li>
		<% end %>
		</ul>
	</div>
</div>
<% content_for :javascript do -%>
	<script type="text/javascript" charset="utf-8">
		var page_overlay = new Overlay();
		load_button_fix(); //fix firefox button display
	</script>
<% end -%>