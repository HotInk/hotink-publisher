<%= link_to 'Back to design', account_design_path(@account, @design) %>
<h1>Editing template</h1>

<% form_for(@tplate, :url => account_design_template_path(@account, @design, @tplate) ) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>