<div class="form_title clearfix">
  <h1>Editing template</h1>
 <div class="template">
  <%= f.label :role, "Template type" %><br />
  <%= f.select :role, { "Front page" => "front_pages/show", "Article" => "articles/show", "Layout" => "layout", "Partial" => "partial"} %>
 </div>
</div>
<div class="details">
	<div class="name_desc">
	  <%= f.label :name %><br />
	  <%= f.text_field :name %><br />
	  <%= f.label :description %><br />
	  <%= f.text_area :description, :rows => 2 %>
	</div>
	<div class="template_data_info">
		<h3>Template data</h3>
	</div>
</div>
<div class="code">
  <%= f.label :code %><br />
  <%= f.text_area :code, :rows => 20 %>
</div>
<div class="button">
	<%= button_link_to_submit 'Save', :class => "larger save" %>
</div>